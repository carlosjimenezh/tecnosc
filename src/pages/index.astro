---
import Layout from '../layouts/Layout.astro';
import Header from '../components/sections/Header.astro';
import Banner from '../components/sections/Banner.astro';
import Services from '../components/sections/Services.astro';
import Gallery from '../components/sections/Gallery.astro';
// import Contact from '../components/sections/Contact.astro';
import Footer from '../components/sections/Footer.astro';
---

<Layout>
<main>
  <Header />
  <Banner />
  <section class="container mx-auto max-w-2xl text-center my-25 mb-10">
    <h1 class="text-lg md:text-3xl text-200-gray font-semibold px-2">
      Protegemos lo que más importa con tecnología, <span class="text-red-400 underline">calidad</span> y <span class="text-red-400 underline">confianza.</span>
    </h1>
  </section>
  <Services />
  <Gallery />
  <!-- <Contact /> -->
  <section>
    <div class="py-10 my-50 mt-30 pb-0 mb-0">
      <section class="bg-image bg-cover bg-[left top] text-white relative">
        <div class="absolute inset-0 bg-black opacity-50 z-2"></div> 
        <img src="/fcontacto.jpg" class="absolute h-full w-full object-cover" alt="Imagen de fondo de contacto" loading="lazy">
        <div class="container max-w-6xl mx-auto p-2 py-35 z-3 relative"> 
          <h1 class="font-bold text-2xl md:text-4xl mb-1 text-center">Contáctanos</h1> 
          <p class="text-md md:text-lg text-center">Instalación de cámaras, alarmas,<br> videoporteros y servicio de internet</p> 
          <div class="my-10 mb-0 flex items-center justify-center gap-2"> 
            <a href="contacto" class="py-2 px-4 bg-[#ff4b5c] border-[#ff4b5c] hover:bg-red-400 rounded border border-2 hover:border-red-400 font-semibold transition-all duration-300">Contáctanos</a> 
          </div> 
        </div> 
      </section>
    </div>
  </section>
  <Footer />
</main>
</Layout>
